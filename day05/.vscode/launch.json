	"version": "0.2.0",
	"configurations": [
		{
			"name": "(gdb) Launch",
			"type": "cppdbg",
			"request": "launch",
			"preLaunchTask": "build AoC 2025 day 05",
			"program": "${workspaceFolder}/aoc-2025-day05",
			"linux": {
				"miDebuggerPath": "gdb"
			},
			"windows": {
				"miDebuggerPath": "gdb.exe"
			},
			"args": [],
			"stopAtEntry": true,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": true,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			]
		}
	]
}